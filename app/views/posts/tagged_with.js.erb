$(".active").removeClass("active");
$(".tagged_with-submit").attr("href", "#");
console.log("<%= @posts.first %>");
$(".tagged-content").fadeOut("slow", function() {
	$(".tagged-content").html(" ");

	<% @posts.each do |post| %>

    <% post_content = content_tag :div, class: "post" do %>
      <%= featured_image(post) %>
      <%= content_tag :div, class: "content" do %>
        <%= content_tag :h3, link_to(shortenify(post.title), post) %>
        <%= content_tag :p, post_excerpt(post.content) %>
      <% end %>
    <% end %>

    $(".tagged-content").append("<%= escape_javascript(post_content) %>");

	<% end %>
	$(".tagged-content").fadeIn("slow");
})
