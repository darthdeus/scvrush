<%= arrowed_header 'Log in' %>

<%= form_tag sessions_path do %>
    <p>
        <%= label_tag :username %>
        <%= text_field_tag :username, params[:username] %>
    </p>    
    <p>
        <%= label_tag :password %>
        <%= password_field_tag :password, params[:password] %>
    </p>    
    
    <p class="button"><%= submit_tag %></p>
    
<% end %>