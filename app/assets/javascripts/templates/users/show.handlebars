<div class="row user-profile">
  <div class="span3 user-info">
    <div class="avatar">
      <img {{bindAttr src="image"}}>
    </div>

    {{#if hasFollowers}}
      <h3>Followers</h3>
    {{else}}
      <div class="alert alert-info">This user has no followers.</div>
    {{/if}}

  </div>

  <div class="span9">
    <h2>
      {{username}} ({{bnet_info}})
      <a class="help-inline" {{action gotoUsers href="true"}}>back to users</a>
    </h2>

    <form class="status-form">
      <!-- TODO - display different placeholder if it's the current user's profile -->
      {{view Scvrush.NewStatusView class="span8" placeholder="Tell us what's on your mind"}}
      <!-- <input class="span8" type="text" placeholder="Tell us what's on your mind"> -->
    </form>


    <div class="statuses">

      {{#each status in statuses}}
        <div class="status">
          <div class="author">
            <a {{action showUser status.user href="true"}}>{{status.username}}</a>
          </div>

          <div class="content">
            <div class="text">{{status.text}}</div>
          </div>

          <div class="meta">
            <span>
              1 person liked this
            </span>
          </div>

        </div>
      {{/each}}

    </div>

  </div>
</div>
