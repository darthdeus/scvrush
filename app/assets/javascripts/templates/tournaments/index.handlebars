<ul class="nav nav-tabs">
  <li class="active">
    <a {{action gotoTournaments href="true"}}>All Events</a>
  </li>

  <div class="pull-right">
    <select><option>Category</option></select>
    <input type="text" placeholder="Search">
  </div>
</ul>

<div class="tournaments row">

  <div class="span9">
    {{#each day in controller}}
      <h2>{{day.human_date}}</h2>
      {{#each tournament in day.tournaments}}
        <div class="tournament">

          <div class="time">
            {{tournament.start_time}}
          </div>

          <img {{bindAttr src="tournament.image_url"}}>

          <div class="description">
            <h3><a {{action showTournament tournament href="true"}}>{{tournament.name}}</a></h3>

            <p>
              <i class="icon-user"></i>
              {{tournament.participant_count}}
              {{#if tournament.one_person}}person{{else}}people{{/if}}
            </p>

          </div>

        </div>
      {{/each}}
    {{/each}}
  </div>

  <div class="span3">

    and these are the calendars
  </div>

</div>
