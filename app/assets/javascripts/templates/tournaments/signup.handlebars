<p>There are already {{participant_count}} players signed up</p>

{{#if controller.isRegistered}}
  <p>Your race is {{view Ember.Select contentBinding="Scvrush.User.ALL_RACES" valueBinding="Scvrush.currentUser.race"}}</p>
  <p>Make sure that this is correct, since you are not allowed to change the race when the tournament begins.</p>
{{/if}}

{{view Scvrush.TournamentSignupButton contentBinding="content" registerLinkClass="btn btn-success" cancelLinkClass="btn btn-danger"}}

{{#if users.isLoaded}}
  <h4>Registered players</h2>

  <div class="registered-players">
    <ul class="unstyled tournament-players">
      {{#each player in users}}
        <li>
          <a {{action showUser player href="true"}}>
            <div {{bindAttr class="player.raceClass :race"}}>{{player.race_class}}</div>
            <div class="name">{{player.username}}</div>
          </a>
        </li>
      {{/each}}
    </ul>
  </div>
{{/if}}
