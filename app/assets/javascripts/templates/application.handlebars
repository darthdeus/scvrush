<div class="span3 sidebar">
  <div id="logo"><img src="/assets/logo.png"></div>

  <section>
    {{view Scvrush.NewStatusView class="sidebar-status-input" placeholder="Post a new status"}}
    {{#linkTo "users.user" Scvrush.currentUser}}<i class="icon-user icon-white"></i>{{/linkTo}}

    {{#each status in Scvrush.currentUser.recentStatuses}}
      <p>
        {{view Scvrush.UserLinksView contentBinding="status.text"}}
      </p>
    {{/each}}

  </section>

  <header class="heading">
    <h3>Your tournaments</h3>
  </header>

  <section>
    <ul>
      <li>
        <a href="#">EU BS #32</a>
        <div class="help-inline">starts in 1 hour 29 minutes</div>
      </li>
      <li>
        <a href="#">EU BS #32</a>
        <div class="help-inline">starts in 5 hours 40 minutes</div>
      </li>
    </ul>
  </section>

</div>

<div class="span12 content">
  {{view Scvrush.NavbarView}}
  {{outlet}}
</div>
