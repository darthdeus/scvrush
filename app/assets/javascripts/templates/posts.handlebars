<div class="posts">

  {{view Em.TextField valueBinding="controller.query" placeholder="Search the posts"}}

  {{#each controller}}
    <div class="post">
      <a {{action showPost this href=true}}>
        <img {{bindAttr src="image"}}>
      </a>

      <a {{action showPost this href=true}}>{{title}}</a>
    </div>
  {{/each}}

</div>
