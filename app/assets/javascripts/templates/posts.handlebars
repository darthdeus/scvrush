<div class="posts">

  {{view Scvrush.TagView tagsBinding="Scvrush.tags"}}

  {{#each controller}}
    <div class="post">
      <a {{action showPost this href=true}}>
        <img {{bindAttr src="image"}}>
      </a>

      <a {{action showPost this href=true}}>{{title}}</a>
    </div>
  {{/each}}

</div>
