<!-- TODO - display register now only if not started, maybe even as a direct clickable button -->
<form class="form-inline">

  {{#if isRegistered}}
    <button class="btn btn-danger" {{action "cancel" content}}>Cancel your registration</button>
  {{else}}

    <span {{bindAttr class="user.isNotTournamentReady:error"}}>
      {{view Ember.TextField valueBinding="user.bnetInfo"}}
    </span>

    <span {{bindAttr class="user.isNotTournamentReady:error"}}>
      {{view Ember.Select contentBinding="Scvrush.User.ALL_RACES" valueBinding="user.race"}}
    </span>

    {{#if shouldCheckin}}
      <button {{bindAttr disabled="user.isNotTournamentReady"}} class="btn btn-success" {{action "checkin" content}}>Check in!</button>
    {{else}}
      <button {{bindAttr disabled="user.isNotTournamentReady" class="user.isTournamentReady:btn-success :btn"}} {{action "register" content}}>Register now!</button>
    {{/if}}

    <i class="icon-info-sign" rel="tooltip" title="Your battle.net username, for example Vogin.132"></i>

  {{/if}}

</form>
